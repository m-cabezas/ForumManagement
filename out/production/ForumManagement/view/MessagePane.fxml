<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane maxWidth="900.0" prefHeight="200.0" prefWidth="900.0" style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MessageController">
   <children>
      <BorderPane layoutX="1.0" layoutY="1.0" prefHeight="400.0" prefWidth="800.0" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="1.0">
         <top>
            <BorderPane maxHeight="50.0" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <right>
                  <Text fx:id="dateTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="date" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>
         </top>
         <center>
            <VBox style="-fx-background-color: ddd;">
               <children>
                  <Text fx:id="contentTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Content" BorderPane.alignment="CENTER_LEFT">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Text>
               </children>
            </VBox>
         </center>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
      <HBox layoutX="10.0" layoutY="10.0">
         <children>
            <Text onMouseClicked="#showUser" strokeType="OUTSIDE" strokeWidth="0.0" text="Author: " BorderPane.alignment="CENTER">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Text>
            <Hyperlink fx:id="authorLink" onAction="#showUser" prefHeight="29.0" prefWidth="171.0" text="Hyperlink" />
            <Text fx:id="adminTxt" fill="#ae0303" strokeType="OUTSIDE" strokeWidth="0.0" text="Administrator">
               <HBox.margin>
                  <Insets left="10.0" top="5.0" />
               </HBox.margin>
            </Text>
         </children>
      </HBox>
   </children>
</AnchorPane>
